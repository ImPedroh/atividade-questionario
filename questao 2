<body>
    <h1>Número positivo e negativo</h1>
    <script>
        let numero =parseInt(prompt("Digite o número"))

        document.write("seu numero é " +numero)

        if(numero >=1){
            document.write("<br>" + "Seu número é positivo")
        }
        if(numero <=-1){
            document.write("<br>" + "Seu número é negativo")
        }
        if(numero = 0){
            document.write("<br>" + "Seu número é zero")
        }
        
    </script>
</body>
</html>
